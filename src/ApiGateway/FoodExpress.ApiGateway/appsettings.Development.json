{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "BFF": {
    "ClientId": "gateway",
    "ClientSecret": "Wfm5OUk1MrLNMd7gREqWsHYTNB2bJyOF",
    "Scopes": [
      "openid",
      "profile",
      "offline_access",
      "catalog",
      "orderingAll"
    ],
    "Apis": [
      {
        "LocalPath": "/api",
        "RequiredToken": "User"
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "catalogservice": {
        "ClusterId": "catalogservice",
        "RateLimiterPolicy": "fixed-by-ip",
        "Match": {
          "Path": "/catalog/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/catalog"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      },
      "orderingservice": {
        "ClusterId": "orderingservice",
        "RateLimiterPolicy": "bucket-by-user",
        "Match": {
          "Path": "/ordering/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/ordering"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      }
    },
    "Clusters": {
      "catalogservice": {
        "Destinations": {
          "base_destination": {
            "Address": "http://localhost:5186"
          }
        }
      },
      "orderingservice": {
        "Destinations": {
          "base_destination": {
            "Address": "http://localhost:5272"
          }
        }
      }
    }
  }
}